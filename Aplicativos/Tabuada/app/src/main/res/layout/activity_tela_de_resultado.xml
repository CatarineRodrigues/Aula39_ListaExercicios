<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margem_16"
    tools:context=".TelaDeResultado">

    <TextView
        android:id="@+id/tvTabuadaDoNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem_16"
        android:text="@string/tabuada_do_2"
        android:textSize="@dimen/fonte_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvCalculoTabuada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCalculoTabuada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem_16"
        android:gravity="center_horizontal"
        android:text="@string/calculo_da_tabuada"
        android:textSize="@dimen/fonte_14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btnRecalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTabuadaDoNumero" />

    <Button
        android:id="@+id/btnRecalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem_16"
        android:text="@string/recalcular_tabuada"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCalculoTabuada" />

</androidx.constraintlayout.widget.ConstraintLayout>